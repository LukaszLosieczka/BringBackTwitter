{
    "name": "BringBackTwitter",
    "icons": {
      "16": "assets/twitter-logo16.png",
      "32": "assets/twitter-logo32.png",
      "48": "assets/twitter-logo48.png",
      "128": "assets/twitter-logo128.png"
    },
    "version": "0.1.0",
    "description": "Brings back old Twitter UI",
    "permissions": ["storage", "tabs"],
    "host_permissions": ["https://*.twitter.com/*", "https://*.x.com/*"],
    "background": {
      "service_worker": "background.js"
    },
    "content_scripts": [
      {
        "matches": ["https://*.twitter.com/*", "https://*.x.com/*"],
        "js": ["contentScript.js"]
      }
    ],
    "web_accessible_resources": [
      {
        "resources": [
          "assets/twitter.png"
        ],
        "matches": ["https://*.twitter.com/*", "https://*.x.com/*"]
      }
    ],
    "action": {
      "default_icon": {
        "16": "assets/twitter-logo16.png",
        "32": "assets/twitter-logo32.png",
        "48": "assets/twitter-logo48.png",
        "128": "assets/twitter-logo128.png"
      },
      "default_title": "BringBackTwitter",
      "default_popup": "popup.html"
    },
    "manifest_version": 3
}